<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dodgerblue">

        <TextView
            android:id="@+id/tituloTurismo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/coolveticarg"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor= "@color/midnightblue"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imagenTurismo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/imggastromain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tituloTurismo" />



        <TextView
            android:id="@+id/descripcionTurismo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coolveticarg"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor= "@color/white"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/imagenTurismo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />











</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
